{
  "name": "liquid-glass-component-kit",
  "version": "0.1.0",
  "description": "Apple-inspired liquid glass morphism toolkit - Create stunning glassmorphism UI components with vanilla JavaScript",
  "type": "module",
  "main": "./dist/liquid-glass.umd.cjs",
  "module": "./dist/liquid-glass.js",
  "types": "./dist/liquid-glass.d.ts",
  "exports": {
    ".": {
      "import": "./dist/liquid-glass.js",
      "require": "./dist/liquid-glass.umd.cjs",
      "types": "./dist/liquid-glass.d.ts"
    },
    "./styles": "./dist/style.css",
    "./react": {
      "import": "./dist/react.js",
      "require": "./dist/react.umd.cjs",
      "types": "./dist/react.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite demo",
    "build": "vite build && vite build -c vite.react.config.js && npm run build:types",
    "build:types": "cp lib/react.d.ts dist/react.d.ts",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint lib demo --ext .js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "glass",
    "glassmorphism",
    "liquid-glass",
    "css-effects",
    "ui-components",
    "vanilla-js",
    "react",
    "react-hooks",
    "backdrop-filter",
    "web-components"
  ],
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "author": "George Clark",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/h0rhay/liquid-glass-component-kit.git"
  },
  "bugs": {
    "url": "https://github.com/h0rhay/liquid-glass-component-kit/issues"
  },
  "homepage": "https://h0rhay.github.io/liquid-glass-component-kit/",
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@types/react": "^18.0.0",
    "eslint": "^9.9.0",
    "jsdom": "^25.0.1",
    "react": "^18.0.0",
    "typescript": "^5.5.0",
    "vite": "^5.4.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=16"
  }
}
